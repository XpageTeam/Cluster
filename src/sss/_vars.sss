:root
	--default-font: "Circle", Arial, sans-serif

	--base-width: 1200px
	--base-block-padding: 100px

	--body-bg-color: #fff
	--body-text-color: #000

	--base-font-size: 16px

	--main-color: #0162A7
	--main-hover-color: lighten(#0162A7, .2)
	
	--border-color: #E5E5E5


	--input-hor-spacing: em(25)
	--input-vert-spacing: em(18)

	--input-padding: 10px 18px 10px
	--select-padding: 10px 35px 10px 18px

	--base-padding: em(100)