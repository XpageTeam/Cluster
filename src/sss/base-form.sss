.base-form
    background: #ffffff
    border-radius: 5px
    border: 1px solid var(--border-color)
    padding: 45px 55px 60px

    &__title
        font-size: em(24)
        line-height: calc(28 / 24)
        margin: 0 0 45px

@media (max-width: 1000px) and (min-width: 660px)
    .base-form
        padding: 30px

        &__title
            margin: 0 0 25px

@media (max-width: 660px)
    .base-form
        padding: var(--base-padding)

        &__title
            margin: 0 0 20px