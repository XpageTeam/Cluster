.main-screen

    &__side
        position: absolute * * 0
        z-index: 10
        height: 100vh
        max-height: 100%
        padding-block: 100px 93px
        display: flex
        flex-direction: column
        overflow: hidden

        &--left
            left: 0
            border-right: 1px solid 

        &--right
            right: 0
            border-left: 1px solid 

    &:first-child

        .main-logo
            
            img
                max-width: none

.main-logo
    size: 148px 85px

    img
        display: block

.mr, .ml

    &-side
        flex: 1 1 auto
        justify-content: space-between
        display: flex
        flex-direction: column

.ml-side
    align-items: center
    padding-inline: 73px

.mr-side
    padding-inline: 37px

    &__soc
        
        .soc
            display: block

            &__link

                &:not(:last-child)
                    margin: 0 0 31px

.ms-nav

    &__item
        background: currentColor
        transition: transform .3s ease
        size: 38px 1px
        position: relative

        &:before
            content: ""
            position: absolute -10px -15px

        &:not(:first-child)
            margin: 30px 0 0

        &:not(.active)
            transform: scaleX(calc(20 / 38))
            cursor: pointer

            &:hover
                transform: scaleX(calc(20 / 30))